# Staging Environment Configuration
ENVIRONMENT=stage
DEBUG=false
LOG_LEVEL=INFO

# Database
DB_HOST=stage-db.internal
DB_PORT=5432
DB_NAME=cicd_stage
DB_USER=stage_user

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1

# Deployment
DEPLOYMENT_TIMEOUT=45
RETRY_COUNT=2
HEALTH_CHECK_INTERVAL=15

# Thresholds (production-like)
LATENCY_THRESHOLD_MS=16000
LOW_SCORE_THRESHOLD=40
HIGH_HEART_RATE=120
LOW_OXYGEN_LEVEL=95

# Monitoring
ENABLE_METRICS=true
DASHBOARD_PORT=8502
# Production Environment Configuration
ENVIRONMENT=prod
DEBUG=false
LOG_LEVEL=WARNING

# Database
DB_HOST=prod-db.company.com
DB_PORT=5432
DB_NAME=cicd_prod
DB_USER=prod_user

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=2

# Deployment
DEPLOYMENT_TIMEOUT=60
RETRY_COUNT=1
HEALTH_CHECK_INTERVAL=30

# Thresholds (strict)
LATENCY_THRESHOLD_MS=12000
LOW_SCORE_THRESHOLD=50
HIGH_HEART_RATE=110
LOW_OXYGEN_LEVEL=98

# Monitoring
ENABLE_METRICS=true
DASHBOARD_PORT=8503
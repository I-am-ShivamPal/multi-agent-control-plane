{
  "name": "my-backend",
  "type": "backend",
  "repo_path_or_url": "https://github.com/user/my-backend.git",
  "build_command": "pip install -r requirements.txt",
  "start_command": "python app.py",
  "health_endpoint": "/health",
  "environments": [
    "dev",
    "stage",
    "prod"
  ],
  "port": 5000,
  "resources": {
    "cpu": "0.5",
    "memory": "512Mi"
  },
  "scaling": {
    "min_replicas": 1,
    "max_replicas": 3,
    "target_cpu_percent": 70
  }
}